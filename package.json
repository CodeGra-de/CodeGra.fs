{
  "name": "codegrade-fs",
  "version": "1.0.0",
  "author": {
    "name": "CodeGrade",
    "email": "info@codegra.de",
    "url": "https://codegra.de"
  },
  "homepage": "https://codegra.de",
  "description": "The CodeGrade filesystem",
  "license": "AGPLv3-only",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "npm run build:only && npm run build:package",
    "build:only": "node .electron-vue/build.js",
    "build:package": "electron-builder",
    "build:mac": "npm run build --mac",
    "build:win": "npm run build --win",
    "build:linux:ia32": "npm run build --linux --ia32",
    "build:linux:x64": "npm run build --linux --x64",
    "build:clean": "cross-env BUILD_TARGET=clean npm run build:only",
    "dev": "node .electron-vue/dev-runner.js",
    "e2e": "npm run pack && mocha test/e2e",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src test",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src test",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "test": "npm run unit && npm run e2e",
    "unit": "karma start test/unit/karma.conf.js",
    "format": "prettier-eslint --use-tabs false --tab-width 4 --trailing-comma all --single-quote true --write src/\\*\\*/\\*.{vue,js,less}",
    "check-format": "prettier-eslint --use-tabs false --tab-width 4 --trailing-comma all --single-quote true --list-different src/\\*\\*/\\*.{vue,js,less}"
  },
  "build": {
    "productName": "CodeGrade Filesystem",
    "appId": "com.codegrade.codegrade-fs",
    "files": [
      "dist/electron/**/*",
      "static/icons/512x512.png",
      "static/codegra-fs.png"
    ],
    "asarUnpack": [
      "resources/node_modules/node-notifier/**"
    ],
    "mac": {
      "icon": "static/icons/icon.icns",
      "target": "dir",
      "extraFiles": [
        {
          "from": "dist/cgfs",
          "to": "cgfs"
        },
        {
          "from": "dist/cgapi-consumer",
          "to": "cgapi-consumer"
        }
      ]
    },
    "win": {
      "forceCodeSigning": false,
      "icon": "static/icons/ms-icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "dist/cgfs",
          "to": "cgfs"
        },
        {
          "from": "dist/cgapi-consumer",
          "to": "cgapi-consumer"
        },
        {
          "from": "dist/winfsp.msi",
          "to": "winfsp.msi"
        }
      ]
    },
    "nsis": {
      "include": "build/installer.nsh",
      "installerIcon": "static/icons/ms-icon.ico",
      "installerHeaderIcon": "static/icons/ms-icon-blue.ico",
      "uninstallerIcon": "static/icons/ms-icon.ico",
      "license": "LICENSE",
      "oneClick": true,
      "perMachine": true,
      "warningsAsErrors": false
    },
    "linux": {
      "icon": "static/icons",
      "target": "deb",
      "category": "Education"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "python3-codegrade-fs"
      ]
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.0-rc.15",
    "jquery": "^3.3.1",
    "node-notifier": "^5.4.0",
    "then-fs": "^2.0.0",
    "vue": "^2.5.16",
    "vue-awesome": "^3.4.0",
    "vue-electron": "^1.0.6",
    "vue-multiselect": "^2.1.6",
    "vuex": "^3.0.1",
    "vuex-electron": "^1.0.0"
  },
  "devDependencies": {
    "ajv": "^6.5.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^2.1.2",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^2.0.4",
    "electron-builder": "^20.19.2",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.12.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "inject-loader": "^4.0.1",
    "karma": "^2.0.2",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.2",
    "karma-electron": "^6.0.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^3.0.0",
    "mini-css-extract-plugin": "0.4.0",
    "mocha": "^5.2.0",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "require-dir": "^1.0.0",
    "sass-loader": "^7.1.0",
    "spectron": "^3.8.0",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.2.4",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.3"
  }
}
